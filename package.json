{
  "name": "twitter-auth",
  "version": "1.2.0",
  "description": "Serverless function to generate Twitter auth tokens on demand.",
  "main": "src/app.ts",
  "private": true,
  "scripts": {
    "build": "esbuild --define:process.env.NODE_ENV=\\\"production\\\" src/app.ts --minify --bundle --format=esm --outfile=dist/worker.js",
    "clean": "rm -rf dist",
    "clean:node": "rm -rf node_modules",
    "dev": "wrangler dev src/app.ts",
    "deploy": "wrangler publish src/app.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --fix \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fourjuaneight/twitter-auth.git"
  },
  "author": "Juan Villela",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fourjuaneight/twitter-auth/issues"
  },
  "homepage": "https://github.com/fourjuaneight/twitter-auth#readme",
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.16.0",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "esbuild": "^0.14.54",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "wrangler": "2.0.28"
  },
  "dependencies": {
    "@cloudflare/wrangler": "^1.19.13",
    "hono": "^2.2.3"
  }
}
